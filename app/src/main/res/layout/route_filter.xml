<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorFilterPopupWindowBackground"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:padding="10dp"
                android:text="@string/filter_title"
                android:textAllCaps="true"
                android:textColor="@color/colorFilterPopupWindowText"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <TextView
                    android:id="@+id/idTV_PopupWindowFilterAccepted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/status_accepted"
                    android:textAllCaps="true"
                    android:textColor="@color/colorFilterPopupAccepted"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/idLL_FilterAccepted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/idTV_PopupWindowFilterAccepted"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/idS_FilterAcceptedYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/roboto"
                        android:showText="false"
                        android:switchTextAppearance="@style/SwitchStyle"
                        android:text="@string/yes"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:theme="@style/SwitchStyle" />

                    <Switch
                        android:id="@+id/idS_FilterAcceptedNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/roboto"
                        android:showText="false"
                        android:switchTextAppearance="@style/SwitchStyle"
                        android:text="@string/no"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:theme="@style/SwitchStyle" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <TextView
                    android:id="@+id/idTV_PopupWindowFilterPaused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/status_paused"
                    android:textAllCaps="true"
                    android:textColor="@color/colorFilterPopupPaused"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/idLL_FilterPaused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/idTV_PopupWindowFilterPaused"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/idS_FilterPausedYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/roboto"
                        android:showText="false"
                        android:switchTextAppearance="@style/SwitchStyle"
                        android:text="@string/yes"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:theme="@style/SwitchStyle" />

                    <Switch
                        android:id="@+id/idS_FilterPausedNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/roboto"
                        android:showText="false"
                        android:switchTextAppearance="@style/SwitchStyle"
                        android:text="@string/no"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:theme="@style/SwitchStyle" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <TextView
                    android:id="@+id/idTV_PopupWindowFilterDropped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/status_dropped"
                    android:textAllCaps="true"
                    android:textColor="@color/colorFilterPopupProblem"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/idLL_FilterDropped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/idTV_PopupWindowFilterDropped"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/idS_FilterDroppedYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/roboto"
                        android:showText="false"
                        android:switchTextAppearance="@style/SwitchStyle"
                        android:text="@string/yes"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:theme="@style/SwitchStyle" />

                    <Switch
                        android:id="@+id/idS_FilterDroppedNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/roboto"
                        android:showText="false"
                        android:switchTextAppearance="@style/SwitchStyle"
                        android:text="@string/no"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:theme="@style/SwitchStyle" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <TextView
                    android:id="@+id/idTV_PopupWindowFilterWithNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/note"
                    android:textAllCaps="true"
                    android:textColor="@color/colorFilterPopupNote"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/idLL_FilterWithNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/idTV_PopupWindowFilterWithNote"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/idS_FilterWithNoteYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/roboto"
                        android:showText="false"
                        android:switchTextAppearance="@style/SwitchStyle"
                        android:text="@string/yes"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:theme="@style/SwitchStyle" />

                    <Switch
                        android:id="@+id/idS_FilterWithNoteNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/roboto"
                        android:showText="false"
                        android:switchTextAppearance="@style/SwitchStyle"
                        android:text="@string/no"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:theme="@style/SwitchStyle" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/idB_PopUpWindowButton"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:background="@drawable/app_button_blue"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/filter_button_text"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>